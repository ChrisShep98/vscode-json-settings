{
  "liveServer.settings.donotShowInfoMsg": true,
  "workbench.editor.labelFormat": "medium",
  "git.autofetch": true,
  "window.zoomLevel": 1,
  "editor.fontSize": 14,
  "workbench.colorTheme": "Kanagawa Wave",
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono, Consolas, 'Courier New', monospace",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.enable": false,
  "prettier.singleQuote": true,
  "editor.accessibilitySupport": "off",
  "terminal.integrated.fontSize": 14,
  "editor.lineHeight": 1.3,
  "editor.formatOnSave": true,

  // Vim stuff:
  "editor.lineNumbers": "relative",
  "vim.useSystemClipboard": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<space>": true,
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"],
    },
    {
      "before": ["<leader>", "f", "e"],
      "commands": ["workbench.view.scm"],
    },
    {
      "before": ["<leader>", "f", "g"],
      "commands": ["workbench.action.findInFiles"],
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["workbench.view.explorer"],
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"],
    },
  ],

  // KANAGAWA WAVE CUSTOM COLORS
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#FFF",
    "sideBarSectionHeader.background": "#1f2029",
    "sideBarSectionHeader.foreground": "#ffffffc3",
    "editorGroupHeader.tabsBackground": "#1f2029",
    "tab.activeForeground": "#FFF",
    "statusBar.background": "#1f2029",
    "statusBar.foreground": "#FFF",
    "titleBar.activeBackground": "#1f2029",
    "terminal.foreground": "#fff",
    "foreground": "#FFF",
    "statusBarItem.remoteBackground": "#1f2029",
    "sideBar.foreground": "#FFF",
    "titleBar.activeForeground": "#FFF",
    "extensionButton.foreground": "#FFF",
    "extensionButton.prominentForeground": "#FFF",
    "button.foreground": "#FFF",
    // "list.activeSelectionForeground": "#fac896",
    // "list.hoverForeground": "#fac896",
  },

