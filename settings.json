{
  "liveServer.settings.donotShowInfoMsg": true,
  "workbench.editor.labelFormat": "medium",
  "git.autofetch": true,
  "window.zoomLevel": 1,
  "editor.fontSize": 14,
  "workbench.colorTheme": "GitHub Dark",
  "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "eslint.enable": false,
  "prettier.singleQuote": true,
  "prettier.printWidth": 120, // was 90

  "editor.accessibilitySupport": "off",
  "terminal.integrated.fontSize": 14,
  "editor.lineHeight": 1.3, // what I normally use
  // Custom colors below
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#FFF",
    "gitDecoration.modifiedResourceForeground": "#f8f5a7",
    "gitDecoration.stageModifiedResourceForeground": "#b8fcb1",
    "editor.wordHighlightBorder": "#fff",
    "activityBar.background": "#121821",
    "sideBar.background": "#0c1017",
    "sideBarSectionHeader.background": "#0c1017",
    "editor.background": "#0c1017",
    "editorGroupHeader.tabsBackground": "#0c1017",
    "tab.activeBackground": "#0c1017",
    "tab.activeForeground": "#fff",
    "tab.inactiveBackground": "#0c1017",
    "statusBar.background": "#0c1017",
    "terminal.background": "#0c1017",
    "titleBar.activeBackground": "#0c1017",
    "titleBar.inactiveBackground": "#0c1017",
    "panel.background": "#0c1017",
    "terminal.foreground": "#fff"
  },
  "editor.tokenColorCustomizations": {
    "strings": "#ffd866", // yellow strings
    "textMateRules": [
      {
        "scope": "punctuation.definition.string.begin, punctuation.definition.string.end",
        "settings": {
          "foreground": "#fff"
        }
      }
    ]
  },

  "[elixir]": {
    // "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "python.defaultInterpreterPath": "/usr/local/bin/python3",
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "editor.minimap.enabled": false
}
